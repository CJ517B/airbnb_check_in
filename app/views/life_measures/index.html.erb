<div class="page-header">
  <h1>
    Life measures
    <a href="/life_measures/new" class="btn btn-lg btn-success">New Life measure</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Goal name</th>
        <th>Target frequency</th>
        <th>Time span</th>
        <th>Start date</th>
        <th>User</th>
        <th>Times completed</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>

      <% @life_measures.each do |life_measure| %>
      <tr>
        <td><%= life_measure.goal_name %></td>
        <td><%= life_measure.target_frequency %></td>
        <td><%= life_measure.time_span %></td>
        <td><%= life_measure.start_date %></td>
        <td><%= life_measure.user.username %></td>
        <td><%= life_measure.times_completed %></td>
        <td><%= life_measure.category_id %></td>
        <td>
          <a href="/life_measures/<%= life_measure.id %>" class="btn btn-primary">Show</a>
          <a href="/life_measures/<%= life_measure.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_life_measure/<%= life_measure.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
